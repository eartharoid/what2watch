{
	"name": "what2watch",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"watch:tailwind": "postcss public/tailwind.css -o public/global.css -w",
		"build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/global.css",
		"build": "npm run build:tailwind && rollup -c",
		"start": "sirv public",
		"serve": "serve public -p 80",
		"firebase": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\" \"firebase emulators:start --only database,functions\"",
		"dev": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\"",
		"lint": "eslint src --ext .js,.json,.svelte --fix"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"@rollup/plugin-replace": "^3.1.0",
		"autoprefixer": "^9.8.7",
		"concurrently": "^6.2.1",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss-cli": "^7.1.2",
		"rollup": "^2.3.4",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^7.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.0.0",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.14"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.4.0",
		"firebase": "^9.1.0",
		"firebase-admin": "^9.12.0",
		"firebase-functions": "^3.15.7",
		"firebaseui": "^5.0.0",
		"sirv-cli": "^1.0.0",
		"svelte-routing": "^1.6.0"
	}
}
